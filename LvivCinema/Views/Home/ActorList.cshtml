@model IEnumerable<LvivCinema.Models.Actor>

@{
    ViewBag.Title = "Список Акторів";
}

<h2>Список Акторів</h2>

<p>
    @Html.ActionLink("Добавити нового Актора", "CreateActor")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Ім'я")
        </th>
        <th>
            @Html.DisplayName("Прізвище")
        </th>
        <th>
            @Html.DisplayName("Рік народження")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.ActionLink("Змінити", "EditActor", new { id=item.Id }) |
            @Html.ActionLink("Передивитися детальніше", "ListActorFilms", new { id=item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
