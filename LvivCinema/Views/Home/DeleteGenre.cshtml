@model LvivCinema.Models.Genre

@{
    ViewBag.Title = "Видалення жанру";
}

<h2>Видалення жанру </h2>

<h3>Ви впевнені що хочете видалити цей жанр?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Назва:</dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
    <p>
        <ul>
            @foreach (var item in Model.Films)
            {
                <li>@Html.ActionLink(item.Name, "ShowInformation", new { id = item.Id })</li>
            }
        </ul>
    </p>


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Назад до списку", "GenreList")
        </div>
    }
</div>
