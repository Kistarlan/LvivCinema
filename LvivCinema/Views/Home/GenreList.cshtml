@model IEnumerable<LvivCinema.Models.Genre>

@{
    ViewBag.Title = "Жанри";
}

<h2>Список жанрів</h2>

<p>
    @Html.ActionLink("Стоврити новий жанр", "CreateGenre")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Список фільмів","ListGenreFilms", new { id = item.Id}) |
            @Html.ActionLink("Видалити жанр", "DeleteGenre", new { id = item.Id })
        </td>
    </tr>
}

</table>
