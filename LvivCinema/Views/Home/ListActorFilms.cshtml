@using LvivCinema.Models
@model Actor

@{
    ViewBag.Title = "Фільми з актором";
}

<h2>Фльми з @(Model.Name+" "+Model.Surname)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Ім'я")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Прізвище")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayName("Рік народження")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>        
    </dl>
        @Html.DisplayName("Фльми в яких знімався:")
    <br />
    <ul>
        @foreach (var film in Model.Films)
        {
            <li>@Html.ActionLink(film.Name, "ShowInformation", new { id = film.Id })</li>
        }
    </ul>
</div>
<p>
    @Html.ActionLink("Змінити", "EditActor", new { id = Model.Id }) |
    @Html.ActionLink("Назад до списку акторів", "ActorList")
</p>
